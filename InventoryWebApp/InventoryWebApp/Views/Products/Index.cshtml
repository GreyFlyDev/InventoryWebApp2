@model IEnumerable<InventoryWebApp.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalInvestment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchasePricePerUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalePricePerUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfSales)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalInvestment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PurchasePricePerUnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalePricePerUnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfSales)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductId }) |
            @Html.ActionLink("Restock", "Create","Restocks", new { id = item.ProductId }, null) |
            @Html.ActionLink("Make Sale", "Create", "Sales", new { id = item.ProductId }, null) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductId })
        </td>
    </tr>
}

</table>
